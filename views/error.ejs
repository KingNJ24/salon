<!-- Error Page -->
<div class="error-container">
  <div class="error-content">
    <h1><%= statusCode || 500 %></h1>
    <h2><%= title || 'Error' %></h2>
    <p class="error-message"><%= message || 'Something went wrong' %></p>
    <a href="/" class="btn">Return to Home</a>
  </div>
</div>

<style>
  .error-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
    text-align: center;
  }
  
  .error-content {
    max-width: 500px;
    padding: 2rem;
    margin: 0 auto;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  
  .error-content h1 {
    font-size: 5rem;
    color: #dc3545;
    margin: 0;
    line-height: 1;
  }
  
  .error-content h2 {
    font-size: 2rem;
    color: #333;
    margin-top: 0.5rem;
  }
  
  .error-message {
    margin: 1.5rem 0;
    color: #6c757d;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #9c8370;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s;
  }
  
  .btn:hover {
    background-color: #8a735f;
  }
</style> 