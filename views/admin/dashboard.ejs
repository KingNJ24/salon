<!-- Dashboard Header -->
<div class="dashboard-header">
    <h1>Dashboard</h1>
    <div class="date-filter">
        <select id="dateRange" class="form-select">
            <option value="today">Today</option>
            <option value="week">This Week</option>
            <option value="month" selected>This Month</option>
            <option value="year">This Year</option>
        </select>
    </div>
</div>

<!-- Dashboard Stats -->
<div class="dashboard-stats">
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-calendar-check"></i>
        </div>
        <div class="stat-content">
            <h3>Total Bookings</h3>
            <div class="value"><%= bookings.length %></div>
            <div class="trend <%= bookings.length > 0 ? 'positive' : 'neutral' %>">
                <i class="fas fa-arrow-up"></i>
                <span>Active</span>
            </div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-content">
            <h3>New Bookings</h3>
            <div class="value"><%= bookings.filter(b => b.status === 'New').length %></div>
            <div class="trend <%= bookings.filter(b => b.status === 'New').length > 0 ? 'positive' : 'neutral' %>">
                <i class="fas fa-arrow-up"></i>
                <span>Pending Review</span>
            </div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-cut"></i>
        </div>
        <div class="stat-content">
            <h3>Services</h3>
            <div class="value"><%= services.length %></div>
            <div class="trend">
                <i class="fas fa-check"></i>
                <span>Active</span>
            </div>
        </div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-images"></i>
        </div>
        <div class="stat-content">
            <h3>Gallery Items</h3>
            <div class="value"><%= gallery.length %></div>
            <div class="trend">
                <i class="fas fa-check"></i>
                <span>Published</span>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="dashboard-grid">
    <!-- Recent Bookings -->
    <div class="dashboard-card">
        <div class="card-header">
            <h2>Recent Bookings</h2>
            <div class="header-actions">
                <a href="/admin/bookings" class="btn btn-sm">View All</a>
                <button class="btn btn-sm btn-primary" onclick="exportBookings()">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Service</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (bookings.length === 0) { %>
                            <tr>
                                <td colspan="5" class="text-center">No bookings yet</td>
                            </tr>
                        <% } else { %>
                            <% bookings.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).slice(0, 5).forEach(booking => { %>
                                <tr>
                                    <td>
                                        <div class="user-info">
                                            <span class="user-name"><%= booking.name %></span>
                                            <span class="user-email"><%= booking.email %></span>
                                        </div>
                                    </td>
                                    <td><%= booking.service %></td>
                                    <td>
                                        <div class="date-info">
                                            <span class="date"><%= new Date(booking.date).toLocaleDateString() %></span>
                                            <span class="time"><%= new Date(booking.date).toLocaleTimeString() %></span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge badge-<%= booking.status.toLowerCase() %>"><%= booking.status %></span>
                                    </td>
                                    <td class="actions">
                                        <div class="action-buttons">
                                            <select class="status-select" data-id="<%= booking.id %>">
                                                <option value="New" <%= booking.status === 'New' ? 'selected' : '' %>>New</option>
                                                <option value="Pending" <%= booking.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                                <option value="Confirmed" <%= booking.status === 'Confirmed' ? 'selected' : '' %>>Confirmed</option>
                                                <option value="Completed" <%= booking.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                                                <option value="Cancelled" <%= booking.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                            </select>
                                            <button class="btn btn-icon" onclick="viewBooking('<%= booking.id %>')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Google Reviews -->
    <div class="dashboard-card">
        <div class="card-header">
            <h2>Google Reviews</h2>
            <div class="header-actions">
                <button class="btn btn-sm btn-primary" onclick="refreshReviews()">
