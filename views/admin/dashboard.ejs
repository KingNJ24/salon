<script>
// Load Google Reviews
function loadGoogleReviews() {
    const reviewsContainer = document.getElementById('google-reviews');
    if (!reviewsContainer) return;

    // Show loading state
    reviewsContainer.innerHTML = `
        <div class="loading-reviews">
            <p>Loading reviews...</p>
            <p class="loading-details">Fetching reviews from Google Places</p>
        </div>
    `;

    // Create a map instance for the Places service
    const map = new google.maps.Map(document.createElement('div'));
    const service = new google.maps.places.PlacesService(map);

    // Use textSearch to find the place
    const request = {
        query: 'Nandini J Makeup Studio & Luxury Salon',
        location: new google.maps.LatLng(29.4450669, 77.3058998),
        radius: 100
    };

    service.textSearch(request, (results, status) => {
        if (status === google.maps.places.PlacesServiceStatus.OK && results && results.length > 0) {
            const place = results[0];
            const detailsRequest = {
                placeId: place.place_id,
                fields: ['rating', 'user_ratings_total', 'reviews', 'name', 'formatted_address']
            };

            service.getDetails(detailsRequest, (placeDetails, detailsStatus) => {
                if (detailsStatus === google.maps.places.PlacesServiceStatus.OK && placeDetails) {
                    const rating = placeDetails.rating || 0;
                    const totalRatings = placeDetails.user_ratings_total || 0;
                    const reviews = placeDetails.reviews || [];

                    let reviewsHTML = `
                        <div class="review-summary">
                            <div class="overall-rating">
                                <h3>Overall Rating</h3>
                                <div class="rating-stars">
                                    ${'★'.repeat(Math.round(rating))}${'☆'.repeat(5 - Math.round(rating))}
                                </div>
                                <p>${rating.toFixed(1)} out of 5</p>
                                <p>${totalRatings} reviews</p>
                            </div>
                        </div>
                    `;

                    if (reviews.length > 0) {
                        reviewsHTML += reviews.map(review => `
                            <div class="review-card">
                                <div class="review-header">
                                    <img src="${review.profile_photo_url || '/images/team/default.jpg'}" 
                                         alt="${review.author_name}" 
                                         class="review-avatar"
                                         onerror="this.src='/images/team/default.jpg'">
                                    <div>
                                        <div class="review-author">${review.author_name}</div>
                                        <div class="review-date">${new Date(review.time * 1000).toLocaleDateString()}</div>
                                    </div>
                                </div>
                                <div class="review-rating">
                                    ${'★'.repeat(review.rating)}${'☆'.repeat(5 - review.rating)}
                                </div>
                                <div class="review-text">${review.text}</div>
                            </div>
                        `).join('');
                    }

                    reviewsContainer.innerHTML = reviewsHTML;
                } else {
                    reviewsContainer.innerHTML = `
                        <div class="review-card">
                            <p>Unable to load reviews at this time.</p>
                            <p class="error-details">${detailsStatus}</p>
                        </div>
                    `;
                }
            });
        } else {
            reviewsContainer.innerHTML = `
                <div class="review-card">
                    <p>Unable to load reviews at this time.</p>
                    <p class="error-details">${status}</p>
                </div>
            `;
        }
    });
}

