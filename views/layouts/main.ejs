                    <ul>
                        <li>Monday - Friday: <%= siteInfo?.hours?.monday || '9am - 8pm' %></li>
                        <li>Saturday: <%= siteInfo?.hours?.saturday || '9am - 6pm' %></li>
                        <li>Sunday: <%= siteInfo?.hours?.sunday || '10am - 5pm' %></li>
