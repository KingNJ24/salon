<script>
document.addEventListener('DOMContentLoaded', function() {
    // Load Google Maps script with proper loading attributes
    const script = document.createElement('script');
    script.src = `https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&libraries=places&v=weekly`;
    script.async = true;
    script.defer = true;
    script.onload = function() {
        // Initialize map and load reviews after script is loaded
        initMap();
        loadGoogleReviews();
    };
    script.onerror = function() {
        console.error('Failed to load Google Maps script');
        const mapElement = document.getElementById('salon-map');
        if (mapElement) {
            mapElement.innerHTML = `
                <div style="padding: 20px; text-align: center; background: #f8f9fa; border-radius: 8px;">
                    <p>Unable to load map at this time. Please try again later.</p>
                </div>
            `;
        }
    };
    document.head.appendChild(script);
});

// Initialize Google Map
function initMap() {
    const apiKey = '<%= googleMapsApiKey %>';
    if (!apiKey) {
        console.error('Google Maps API key is missing');
        return;
    }

    const mapElement = document.getElementById('salon-map');
    if (!mapElement) return;

    const salonLocation = { lat: 29.4450669, lng: 77.3058998 };
    
    try {
        const map = new google.maps.Map(mapElement, {
            center: salonLocation,
            zoom: 15,
            styles: [
                {
                    "featureType": "poi",
                    "elementType": "labels",
                    "stylers": [{ "visibility": "off" }]
                }
            ]
        });

        // Use standard Marker instead of AdvancedMarkerElement
        const marker = new google.maps.Marker({
            position: salonLocation,
            map: map,
            title: 'Nandini J Makeup Studio & Luxury Salon',
            animation: google.maps.Animation.DROP
        });

        const infoWindow = new google.maps.InfoWindow({
            content: `
                <div style="padding: 10px;">
                    <h3 style="margin: 0 0 10px 0; color: var(--color-primary);">Nandini J Makeup Studio & Luxury Salon</h3>
                    <p style="margin: 5px 0;"><i class="fas fa-map-marker-alt"></i> <%= siteInfo.address %></p>
                    <p style="margin: 5px 0;"><i class="fas fa-phone"></i> <%= siteInfo.phone %></p>
                </div>
            `
        });

        marker.addListener('click', () => {
            infoWindow.open(map, marker);
        });

        // Open info window by default
        infoWindow.open(map, marker);
    } catch (error) {
        console.error('Error initializing map:', error);
        mapElement.innerHTML = `
            <div style="padding: 20px; text-align: center; background: #f8f9fa; border-radius: 8px;">
                <p>Unable to load map at this time. Please try again later.</p>
            </div>
        `;
    }
}

// Load Google Reviews
function loadGoogleReviews() {
    const reviewsContainer = document.getElementById('google-reviews');
    if (!reviewsContainer) return;

    // Show loading state
    reviewsContainer.innerHTML = `
        <div class="loading-reviews">
            <p>Loading reviews...</p>
            <p class="loading-details">Fetching reviews from Google Places</p>
        </div>
    `;

    // Create a map instance for the Places service
    const map = new google.maps.Map(document.createElement('div'));
    const service = new google.maps.places.PlacesService(map);

    // Use textSearch to find the place
    const request = {
        query: 'Nandini J Makeup Studio & Luxury Salon',
        location: new google.maps.LatLng(29.4450669, 77.3058998),
        radius: 100
    };

    service.textSearch(request, (results, status) => {
        console.log('Places service response:', {
            status,
            hasResults: !!results,
            resultCount: results?.length || 0
        });

        if (status === google.maps.places.PlacesServiceStatus.OK && results && results.length > 0) {
            // Get the first result
            const place = results[0];
            
            // Now get the details of this place
            const detailsRequest = {
                placeId: place.place_id,
                fields: ['rating', 'user_ratings_total', 'reviews', 'name', 'formatted_address']
            };

            service.getDetails(detailsRequest, (placeDetails, detailsStatus) => {
                console.log('Place details response:', {
                    status: detailsStatus,
                    hasDetails: !!placeDetails,
                    hasReviews: !!placeDetails?.reviews,
                    reviewCount: placeDetails?.reviews?.length || 0
                });

                if (detailsStatus === google.maps.places.PlacesServiceStatus.OK && placeDetails) {
                    const rating = placeDetails.rating || 0;
                    const totalRatings = placeDetails.user_ratings_total || 0;
                    const reviews = placeDetails.reviews || [];

                    // Create the reviews HTML
                    let reviewsHTML = `
                        <div class="review-summary">
                            <div class="overall-rating">
                                <h3>Overall Rating</h3>
                                <div class="rating-stars">
                                    ${'★'.repeat(Math.round(rating))}${'☆'.repeat(5 - Math.round(rating))}
                                </div>
                                <p>${rating.toFixed(1)} out of 5</p>
                                <p>${totalRatings} reviews</p>
                            </div>
                        </div>
                    `;

                    if (reviews.length > 0) {
                        reviewsHTML += reviews.map(review => `
                            <div class="review-card">
                                <div class="review-header">
                                    <img src="${review.profile_photo_url || '/images/team/default.jpg'}" 
                                         alt="${review.author_name}" 
                                         class="review-avatar"
                                         onerror="this.src='/images/team/default.jpg'">
                                    <div>
                                        <div class="review-author">${review.author_name}</div>
                                        <div class="review-date">${new Date(review.time * 1000).toLocaleDateString()}</div>
                                    </div>
                                </div>
                                <div class="review-rating">
                                    ${'★'.repeat(review.rating)}${'☆'.repeat(5 - review.rating)}
                                </div>
                                <div class="review-text">${review.text}</div>
                            </div>
                        `).join('');
                    } else {
                        reviewsHTML += `
                            <div class="review-card">
                                <p>No reviews available at this time.</p>
                                <p class="help-text">Be the first to leave a review!</p>
                                <a href="https://www.google.com/maps/place/Nandini+J+Makeup+Studio+%26+Luxury+Salon+-HD+Party+Makeup+%7CHaircut+%26+Styling+%7CHD+Bridal+Makeup+in+Shamli/@29.4450715,77.3033249,17z/data=!3m1!4b1!4m6!3m5!1s0x390c2f98f7a35099:0x1cc5130c96e9864d!8m2!3d29.4450669!4d77.3058998!16s%2Fg%2F11kc2x_v4n?entry=ttu" 
                                   target="_blank" 
                                   class="btn btn-primary">
                                    Write a Review
                                </a>
                            </div>
                        `;
                    }

                    reviewsContainer.innerHTML = reviewsHTML;

                    // Hide scroll indicator after user has scrolled
                    const scrollContainer = document.querySelector('.reviews-scroll-container');
                    const scrollIndicator = document.querySelector('.reviews-scroll-indicator');
                    
                    if (scrollContainer && scrollIndicator) {
                        scrollContainer.addEventListener('scroll', function() {
                            if (this.scrollLeft > 50) {
                                scrollIndicator.style.opacity = '0';
                                setTimeout(() => {
                                    scrollIndicator.style.display = 'none';
                                }, 500);
                            }
                        });
                    }
                } else {
                    console.error('Error loading place details:', detailsStatus);
                    reviewsContainer.innerHTML = `
                        <div class="review-card">
                            <p>Unable to load reviews at this time.</p>
                            <p class="error-details">${detailsStatus}</p>
                            <p class="help-text">Please try again later or contact us directly for feedback.</p>
                            <a href="https://www.google.com/maps/place/Nandini+J+Makeup+Studio+%26+Luxury+Salon+-HD+Party+Makeup+%7CHaircut+%26+Styling+%7CHD+Bridal+Makeup+in+Shamli/@29.4450715,77.3033249,17z/data=!3m1!4b1!4m6!3m5!1s0x390c2f98f7a35099:0x1cc5130c96e9864d!8m2!3d29.4450669!4d77.3058998!16s%2Fg%2F11kc2x_v4n?entry=ttu" 
                               target="_blank" 
                               class="btn btn-primary">
                                View on Google Maps
                            </a>
                        </div>
                    `;
                }
            });
        } else {
            console.error('Error finding place:', status);
            reviewsContainer.innerHTML = `
                <div class="review-card">
                    <p>Unable to load reviews at this time.</p>
                    <p class="error-details">${status}</p>
                    <p class="help-text">Please try again later or contact us directly for feedback.</p>
                    <a href="https://www.google.com/maps/place/Nandini+J+Makeup+Studio+%26+Luxury+Salon+-HD+Party+Makeup+%7CHaircut+%26+Styling+%7CHD+Bridal+Makeup+in+Shamli/@29.4450715,77.3033249,17z/data=!3m1!4b1!4m6!3m5!1s0x390c2f98f7a35099:0x1cc5130c96e9864d!8m2!3d29.4450669!4d77.3058998!16s%2Fg%2F11kc2x_v4n?entry=ttu" 
                       target="_blank" 
                       class="btn btn-primary">
                        View on Google Maps
                    </a>
                </div>
            `;
        }
    });
}
</script> 